<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@drawable/whitedivider"
    android:showDividers="end"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="15dp"
        android:background="@color/colorWhite">
        <TextView
            android:id="@+id/sb_icon4"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/icon6"
            android:textSize="25sp"
            android:paddingTop="3sp"
            android:textColor="@color/gray"
            android:layout_gravity="center"
            ></TextView>
        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content">

        </TextView>
        <RelativeLayout
            android:id="@+id/edit_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:focusable="true"
        android:focusableInTouchMode="true">
            <EditText
                android:paddingTop="3dp"
                android:paddingLeft="10dp"
                android:paddingBottom="1dp"
                android:id="@+id/sb_edittext"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:hint="搜索你感兴趣的东西"
                android:background="@drawable/edittextbackground"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:singleLine="true"
                android:bufferType="normal"
                android:freezesText="true"
                android:layout_gravity="center"
                >
            </EditText>
        </RelativeLayout>

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:id="@+id/sb_search"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="24dp"
            android:text="搜索"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"

            ></TextView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="作品"
        android:textSize="30sp"
        android:textColor="@color/backgroundblack">

    </TextView>
</LinearLayout>